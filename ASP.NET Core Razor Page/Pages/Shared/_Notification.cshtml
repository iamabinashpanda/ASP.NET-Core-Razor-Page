@using ASP.NET_Core_Razor_Page.Model.ViewModel;
@{
    var notification = (Notification)ViewData["Notification"];
    if(notification != null)
    {
        var notificationClass = "";
        switch (notification.Type)
        {
            case Enums.NotificationType.Success: notificationClass = "alert-success"; break;
            case Enums.NotificationType.Info: notificationClass = "alert-primary"; break;
            case Enums.NotificationType.Error: notificationClass = "alert-danger"; break;
            default: notificationClass = ""; break;
        }

        <div class="alert @notificationClass alert-dismissible fade show" role="alert">
            @Html.Raw(notification.Message)
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}
